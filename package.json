{
  "name": "zapier-take-home-challenge-darell-koh",
  "version": "1.0.0",
  "description": "TypeScript Client library for the Billing System API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "start": "nodemon --exec ts-node -r tsconfig-paths/register src/api/server.ts",
    "start:staging": "NODE_ENV=staging ts-node -r tsconfig-paths/register src/api/server.ts",
    "start:prod": "NODE_ENV=production ts-node -r tsconfig-paths/register src/api/server.ts",
    "demo": "ts-node -r tsconfig-paths/register src/demo.ts",
    "build": "tsc",
    "build:prod": "npx rimraf dist && tsc --project tsconfig.prod.json && npm run minify",
    "minify": "npx terser dist/**/*.js -c passes=2,unsafe=true,unsafe_math=true,unsafe_proto=true,unsafe_regexp=true,unsafe_undefined=true -m reserved=['tslib'] -o dist/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "check": "npm run lint && npm run format",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/billing-system-client.git"
  },
  "author": "Darell Koh",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.22",
    "@types/pg": "^8.15.2",
    "@types/supertest": "^6.0.3",
    "axios": "^1.9.0",
    "axios-retry": "^4.5.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "pg": "^8.16.0",
    "supertest": "^7.1.1",
    "uuid": "^9.0.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.18",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.3.5",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "rimraf": "^5.0.5",
    "terser": "^5.29.2",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
